@model FiveTeam.Models.ProductFiveTeam

@{
    
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Areas/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Areas/css/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Areas/css/startmin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Areas/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .row {
            border-color: #000080;
        }
        .btn-block {
            font-size: 2rem;
            font-weight: bolder;
            color: #000080;
            background-color: #FF8C00;
            border-color: #000080; /* Nếu bạn muốn đổi màu viền */
        }

        .btn-block:hover {
            background-color: #FF8C00; /* Màu cam nhạt khi hover */
            border-color: #FF8C00; /* Nếu bạn muốn đổi màu viền khi hover */
        }
        .form-group checkbox {
            border-color: #000080;
            background-color: #000080;
            color: #000080;
        }

        .custom-btn {
            font-size: 4rem;
            font-weight: bolder;
            color: #000080;
            text-align: center;
          
        }
    </style>

</head>

<body>

    <div class="container" ">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading" style="background-color: #FF8C00; border-color: #000080; ">
                        <h3 class="panel-title custom-btn">Thông Tin </h3>
                    </div>
                    <div class="panel-body" style="background-color: #FFFFFF; border-color: #000080;" >

                        <form role="form" method="post" >
                            <fieldset>

                                <div class="form-group">
                                    <input class="form-control" placeholder="Username" name="user" type="username" autofocus>
                                </div>

                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>

                                <div class="checkbox" style=" color: #000080;">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Nhớ Mật Khẩu
                                    </label>
                                </div>
                                <div class="text-danger">
                                    @TempData["error"]
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Đăng Nhập" class="btn btn-lg btn-success btn-block" />

                            </fieldset>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Areas/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Areas/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Areas/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Areas/js/startmin.js"></script>

</body>

</html>