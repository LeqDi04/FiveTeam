
@{
    ViewBag.Title = "Trangchu";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}



<!-- phần features-->
<section class="features" id="features">
    <h1 class="heading">Các <span>Tính Năng</span> Của Chúng Tôi</h1>
    <div class="box-container">
        <div class="box">
            <img src="~/img/Features/fresh.jpg" alt="Fresh produce image">
            <h3>Khám Phá Sự Tươi Ngon</h3>
            <p>Khám phá các sản phẩm theo mùa mới nhất của chúng tôi được giao trực tiếp đến nhà bạn.</p>
            <a href="#" class="btn">Mua Ngay</a>
        </div>

        <div class="box">
            <img src="~/img/Features/giaohang.png" alt="Delivery truck image">
            <h3>Tận Hưởng Giao Hàng Miễn Phí</h3>
            <p>Nhận hàng tạp hóa yêu thích của bạn được giao miễn phí cho các đơn hàng trên $50.</p>
            <a href="#" class="btn">Tìm Hiểu Thêm</a>
        </div>

        <div class="box">
            <img src="~/img/Features/thanhtoan.jpg" alt="Payment methods image">
            <h3>Thanh Toán Đơn Giản</h3>
            <p>Chọn từ các tùy chọn thanh toán tiện lợi và an toàn như thẻ tín dụng, thẻ ghi nợ hoặc ví điện tử.</p>
            <a href="#" class="btn">Xem Các Tùy Chọn Thanh Toán</a>
        </div>
    </div>
</section>



<!-- phần products -->
<section class="products" id="products">
    <h1 class="heading"> Tất Cả <span>Sản Phẩm</span> </h1>
    <div class="swiper product-slide">
        <div class="swiper-wrapper">

            <div class="swiper-slide box">
                <img src="~/img\Products\bot_toi.jpg" alt="">
                <h3>Bột Tỏi</h3>
                <div class="prince"> 19.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>

            <div class="swiper-slide box">
                <img src="~/img/Products/cam_thao.jpg" alt="">
                <h3>Cam Thảo</h3>
                <div class="prince"> 15.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>

            <div class="swiper-slide box">
                <img src="~/img/Products/bot-dieu-mau.jpg" alt="">
                <h3>Bột Điều Màu</h3>
                <div class="prince"> 29.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>

            <div class="swiper-slide box">
                <img src="~/img/Products/chuoi_hot.jpg" alt="">
                <h3>Chuối Hột</h3>
                <div class="prince"> 14.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>
            <div class="swiper-slide box">
                <img src="~/img/Products/bottieuden.jpg" alt="">
                <h3>Bột Tiêu Đen</h3>
                <div class="prince"> 5.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>

            <div class="swiper-slide box">
                <img src="~/img/Products/gung.jpg" alt="">
                <h3>Gừng</h3>
                <div class="prince"> 9.000 VNĐ</div>

                <a href="#" class="btn"> Thêm Vào Giỏ Hàng</a>
            </div>

            @foreach (var product in Model.Products)
            {
                <div class="swiper-slide box">
                    <img src="@Url.Content(product.Picture)" alt="@product.ProductName">
                    <h3>@product.ProductName</h3>
                    <div class="price">@product.Price VNĐ</div>
                    <a href="#" class="btn">Thêm Vào Giỏ Hàng</a>
                </div>
            }

        </div>
    </div>

</section>

